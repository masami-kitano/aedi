<div class="item comment-btn">
    <form>
        <button type="button" style="border-style: none;">
            <i class="far fa-comment"></i>
        </button>
    </form>
    <p class="post-comment-count"><%= idea.comments.count %></p>
</div>
<div class="comment-modal">
    <div class="comment-modal__content">
        <%= form_with(model: idea, local: true) do |f| %>
        <p class="cat-form-title">アイデアの更新</p>
            <div class="idea-form-wrap">
                <%= f.label :category_id, 'カテゴリー名', class: 'idea-form-category' %>
                <%= f.collection_select(:category_id, Category.all, :id, :name, { prompt: false }, {class: 'form-item category'}) do |category| %>
                <% end %>
            </div>
            <div class="idea-form-wrap">
            	<p class="idea-form-title">タイトル</p>
            	<%= f.text_field :title, class: 'form-item title'%>
            </div>
        	<div class="idea-form-wrap">
            	<p class="idea-form-content">内容</p>
            	<%= f.text_area :content, class: 'form-item content' %>
        	</div>
        	<%= f.submit 'Update', class: 'btn btn-primary btn-block' %>
        <% end %>
        <div class="close-btn">
            <span></span>
            <span></span>
        </div>
    </div>
</div>