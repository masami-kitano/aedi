<ul class="user-container">
    <% @users.each do |user| %>
    <li class="user">
        <div class="user__icon">
            <img class="" src="<%= gravatar_url(user, { size: 40 }) %>" alt="">
        </div>
        <div class="user__name">
            <%= user.name %>
        </div>
        <div class="relationships-area">
            <%= render 'relationships/follow_button', user: user %>
        </div>
    </li>
    <% end %>
</ul>